<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Task Manager 4.5", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Today", "Today", "Task", new { }, new { })</li>
                            <li>@Html.ActionLink("History", "History", "Task", new { }, new { })</li>
                            <li>@Html.ActionLink("Todo", "Index", "Task", new { tasktype = "todo" }, new { })</li>
                            <li>@Html.ActionLink("Waiting", "Index", "Task", new { tasktype = "waiting" }, new { })</li>
                            <li>@Html.ActionLink("Someday", "Index", "Task", new { tasktype = "someday" }, new { })</li>
                            <li>@Html.ActionLink("Notes", "Index", "Task", new { tasktype = "note" }, new { })</li>
                            <li>@Html.ActionLink("Project", "Index", "Task", new { tasktype = "project" }, new { })</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
